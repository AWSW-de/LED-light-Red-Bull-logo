// ###############################################################################################################################
// # Includes:
// #
// # You will need to add the following libraries to your Arduino IDE to use the project:
// # - Adafruit NeoPixel              // by Adafruit: https://github.com/adafruit/Adafruit_NeoPixel
// #
// ###############################################################################################################################
#include <Adafruit_NeoPixel.h>        // RGB LED library


// ###############################################################################################################################
// # Hardware settings:
// ###############################################################################################################################
#define LED_PIN D2                    // Pin for the LED control 
#define LED_COUNT 112                 // Amount of LEDs in the single LED strip


// ###############################################################################################################################
// # LED settings:
// ###############################################################################################################################
Adafruit_NeoPixel strip(LED_COUNT, LED_PIN, NEO_GRB + NEO_KHZ800);
int LEDBRIGHTNESS = 128;              // LED default brightness (0-255)


// ###############################################################################################################################
// # Setup function to run at startup:
// ###############################################################################################################################
void setup() {
  Serial.begin(115200);
  delay(1000);
  strip.begin();                                  // INITIALIZE NeoPixel strip object (REQUIRED)
  strip.setBrightness(LEDBRIGHTNESS);             // Set LED brightness
  colorWipe(strip.Color(0,   0,   0), 0);         // LEDs OFF
  strip.show();                                   // LEDs OFF
  delay(1000);
  Serial.println(" ");
  Serial.println("################################################");
  Serial.print("# AWSW Red Bull RGB LED logo - Version: ");
  Serial.print(code_version);
  Serial.println(" #");
  Serial.println("################################################");
  colorWipe(strip.Color(255, 0, 0), 10);          // Set LEDs to red color
}


// ###############################################################################################################################
// # Loop funtion to run all the time:
// ###############################################################################################################################
void loop() {
  // Nothing to do here... The LEDs were already set to red on startup...
}


// ###############################################################################################################################
// # LED funtion: Fill the dots one after the other with a color
// ###############################################################################################################################
void colorWipe(uint32_t color, int wait) {
  for (int i = 0; i < strip.numPixels(); i++) { 
    strip.setPixelColor(i, color);         
  }
  strip.show();                          
  delay(wait);                           
}
